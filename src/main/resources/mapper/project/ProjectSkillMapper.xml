<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.runningmate.runningmate.project.domain.mapper.ProjectSkillMapper">
    <insert id="insertSkill">
        INSERT INTO project_skill(project_id, skill_id)
        VALUES(#{projectId}, #{skillId})
    </insert>

    <insert id="insertSkills" parameterType="java.util.List">
        INSERT INTO project_skill(project_id, skill_id)
        VALUES
            <foreach collection="list" item="item" separator=",">
               (#{item.projectId}, #{item.skillId})
            </foreach>
    </insert>
</mapper>